{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./src",
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "module": "esnext",
        "target": "es2015",
        "typeRoots": ["node_modules/@types"],
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": ["es2018", "dom"]
    },
    "typedocOptions": {
        "name": "simbad-client",
        "mode": "modules",
        "theme": "markdown",
        "exclude": "**/*+(index|.spec|.e2e|.module|index.d).ts",
        "excludeExternals": true,
        "hideGenerator": true,
        "ignoreCompilerErrors": false
    }
}
